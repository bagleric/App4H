<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bagle.app4h.AddDialogMainActivity"
    tools:showIn="@layout/activity_add_dialog_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_other_btn"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_project_btn"
        android:layout_alignLeft="@+id/new_project_btn"
        android:layout_alignStart="@+id/new_project_btn"
        android:layout_marginBottom="64dp"
        android:layout_marginRight="16dp"
        app:layout_anchorGravity="bottom|right"
        app:layout_constraintBottom_toTopOf="@+id/new_project_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_add_white_50dp"
        android:visibility="gone"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_project_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@drawable/ic_add_white_50dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/new_project_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/new_project_btn"
        android:layout_toLeftOf="@+id/new_project_btn"
        android:layout_toStartOf="@+id/new_project_btn"
        android:clickable="true"
        android:gravity="end"
        android:text="@string/new_project"
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/new_project_btn"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/new_project_explanation"/>

    <TextView
        android:id="@+id/new_project_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/new_project_btn"
        android:layout_alignEnd="@+id/new_project_title"
        android:layout_alignRight="@+id/new_project_title"
        android:text="@string/new_project_explanation"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/new_project_btn"
        app:layout_constraintRight_toRightOf="@+id/new_project_title"/>

    <TextView
        android:id="@+id/new_other_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/new_project_title"
        android:layout_alignRight="@+id/new_project_title"
        android:layout_alignTop="@+id/new_other_btn"
        android:gravity="end"
        android:text="Other Menu Item"
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/new_other_btn"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/other_description"/>

    <TextView
        android:id="@+id/other_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other explanation"
        android:textSize="15sp"
        android:layout_below="@+id/new_other_title"
        android:layout_alignBottom="@+id/new_other_btn"
        android:layout_alignEnd="@+id/new_other_title"
        android:layout_alignRight="@+id/new_other_title"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/new_other_btn"
        app:layout_constraintRight_toRightOf="@+id/new_other_title"/>


</android.support.constraint.ConstraintLayout>
